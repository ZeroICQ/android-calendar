<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="">

    <data>
        <variable
            name="dayNumber"
            type="String" />
    </data>

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/month_day_cl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/month_day_cell_border">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/month_day_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginEnd="@dimen/month_day_side_margin"
            android:layout_marginStart="@dimen/month_day_side_margin"
            android:layout_marginTop="@dimen/month_day_top_margin"
            android:textSize="@dimen/default_font_size"
            android:text="@{dayNumber}"


            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </android.support.v7.widget.LinearLayoutCompat>
</layout>
